<%= content_tag :tr, id: dom_id(post) do %>
  <td><%= post.title %></td>
  <td><%= post.body %></td>
  <td><%= link_to 'Show', post, data: { turbo_frame: 'post_form' } %></td>
  <td><%= link_to 'Edit', edit_post_path(post), data: { turbo_frame: 'post_form'} %></td>
  <td><%= button_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
