<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<%= turbo_frame_tag 'post_form', src: new_post_path, target: 'post_form' %>

<%= turbo_stream_from 'posts' %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id='posts'>
    <%= render @posts %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, data: { turbo_frame: 'post_form' } %>
